---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title": {{ post.title | jsonify }},
      "category": {{ post.category | jsonify }},
      "tags": {{ post.tags | join: ', ' | jsonify }},
      "url": {{ post.url | relative_url | jsonify }},
      "date": {{ post.date | jsonify }},
      "content": {{ post.content | strip_html | strip_newlines | truncatewords: 50 | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  {% assign valid_pages = site.pages | where_exp: "item", "item.title != nil" %}
  {% if site.posts.size > 0 and valid_pages.size > 0 %},{% endif %}
  {% for page in valid_pages %}
    {
      "title": {{ page.title | jsonify }},
      "category": {{ page.dir | jsonify }},
      "tags": "",
      "url": {{ page.url | relative_url | jsonify }},
      "date": "",
      "content": {{ page.content | strip_html | strip_newlines | truncatewords: 50 | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]